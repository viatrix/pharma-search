{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "build/",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*"
  ]
}
